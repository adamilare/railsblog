<div class="interaction">
    <span>Comments: <%= post.comments_counter%></span>
    <span class='add-like'>Likes: <%= post.likes_counter%></span>
    <%= form_with url: "/users/#{post.author.id}/posts/#{post.id}/likes", class: "form-like" do |form| %>
      <%= form.submit "Like", class: "like-btn border" %>
    <%end%>
</div> 
